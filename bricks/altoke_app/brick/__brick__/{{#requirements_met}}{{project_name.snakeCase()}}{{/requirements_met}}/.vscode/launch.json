{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App",
      "request": "launch",
      "type": "dart",
      "cwd": "packages/app/",
      "program": "lib/bootstrap/main_${input:FLAVOR}.dart",
      "toolArgs": [
        "--no-pub",
        "--flavor=${input:FLAVOR}",{{#include_web_platform}}
        "--web-port=3000",{{/include_web_platform}}
        "--dart-define-from-file=env.${input:FLAVOR}.json",
      ],
    },
  ],
  "inputs": [
    {
      "id": "FLAVOR",
      "type": "pickString",
      "description": "Select the flavor",
      "options": [
        "development",
        "staging",
        "production",
      ],
    },
  ],
}
